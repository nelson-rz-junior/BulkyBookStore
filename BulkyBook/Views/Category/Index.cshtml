@model IEnumerable<Category>

@{
    ViewData["Title"] = "Categories";
}

<div class="p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h3 class="text-primary">Categories</h3>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary" style="width: 150px;">
                <i class="bi bi-plus-circle"></i> &nbsp; Create
            </a>
        </div>                    
    </div>

    <table class="table table-bordered table-striped mt-3" style="width:100%;">
        <thead>
            <tr>
                <th width="10%">Id</th>
                <th width="60%">Name</th>
                <th width="10%">Order</th>
                <th width="20%"></th>
            </tr>
        </thead>
        <tbody>
            @foreach(var category in Model)
            {
                <tr>
                    <td>@category.Id</td>
                    <td>@category.Name</td>
                    <td>@category.DisplayOrder</td>
                    <td align="center">
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Category" asp-action="Edit" asp-route-id="@category.Id" class="btn btn-primary mx-2">
                                <i class="bi bi-pencil-square"></i> &nbsp; Edit
                            </a>
                            <a asp-controller="Category" asp-action="Delete" asp-route-id="@category.Id" class="btn btn-danger mx-2">
                                <i class="bi bi-trash-fill"></i> &nbsp; Delete
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section Scripts
{
    <partial name="_Notification" />
}
