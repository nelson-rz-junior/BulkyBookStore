@model IEnumerable<Category>

@{
    ViewData["Title"] = "Categories";
}

<div class="p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h3 class="text-primary">Categories</h3>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> &nbsp; New Category
            </a>
        </div>                    
    </div>

    <table class="table table-bordered table-striped mt-3" style="width:100%;">
        <thead>
            <tr>
                <th width="10%">Id</th>
                <th width="70%">Name</th>
                <th width="10%">Order</th>
                <th width="10%"></th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Any())
            {
                foreach(var category in Model)
                {
                    <tr>
                        <td>@category.Id</td>
                        <td>@category.Name</td>
                        <td>@category.DisplayOrder</td>
                        <td align="center">
                            <div class="text-center">
                                <a asp-controller="Category" asp-action="Edit" asp-route-id="@category.Id" class="btn-sm btn-primary mx-2" title="Edit" style="text-decoration:none;">
                                    <i class="bi bi-pencil-square"></i>
                                </a>
                                <a asp-controller="Category" asp-action="Delete" asp-route-id="@category.Id" class="btn-sm btn-danger mx-2" title="Delete" style="text-decoration:none;">
                                    <i class="bi bi-trash-fill"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="3" align="center">No items found</td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section Scripts
{
    <partial name="_Notification" />
}
